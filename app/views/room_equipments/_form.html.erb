<% @EquipmentCollection = Equipment.order("tag ASC").map{ |s| ["#{s.tag}"+" - "+"#{s.name}", s.id]} %>

<%= semantic_form_for [@room,@room_equipment] do |f| %>

<%= f.inputs :name => "Equipment informations" do %>    
<%= f.input :tag, :as => :select, :collection => @EquipmentCollection, :for => :room_equipments %>
<%= f.input :quantity, :for => :room_equipments %>
<% end %>

<%= f.actions do %>
 <%= f.action :submit, :as => :button %>
<% end %>
 
<% end %>

