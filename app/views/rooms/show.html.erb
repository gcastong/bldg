	<p>
	<strong>Default occupation density used</strong>
	</p>  	
	<% end %>

	<p>
	<strong>Required Outdoor Air Rate: </strong>	
		<% @RaAz = @room.area * @Ashrae62_2001.ra_ip  %>
		<% if @room.Occupancy.blank? %>
			<% @Pz = @DefaultRoomOccupancy %>
		<% else %>	  	
			<% @Pz = @room.Occupancy %>
		<% end %>
		<% @RpPz = @Pz * @Ashrae62_2001.rp_ip %>
		<% @Vbz = @RaAz + @RpPz %>
	<%= number_with_precision(@Voz2001 = @Vbz/@room.AirDistributionEffectiveness, precision: 0) %> cfm 
	</p>




